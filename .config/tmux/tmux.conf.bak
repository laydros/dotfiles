# .tmux.conf
# 2025-10-30 jwh

# 256 colors for proper theme support
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",*256col*:Tc"

# Scrollback
set -g history-limit 90000

# Prefix keys
set -g prefix C-z
unbind C-b
bind C-z send-prefix

# Window/pane numbering
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on

# Faster command sequences
set -sg escape-time 1

# Vim keys in copy mode, emacs status line
set -g mode-keys vi
set -g status-keys emacs

# Mouse control
set -g mouse on

# Focus events for terminals that support them and neovim
set -g focus-events on

# Status bar with hostname
set -g status-style 'bg=#333333 fg=cyan'
set -g status-right '#[fg=yellow]#H #[fg=white]%H:%M'
set -g status-right-length 50
set -g status-interval 60

# Window titles
set -g set-titles on
set -g set-titles-string "[#S:#I #H] #W"

# Vim-style pane navigation
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Use C-h and C-l to cycle through panes
bind -r C-h select-window -t :-
bind -r C-l select-window -t :+

# Last window
bind C-z last-window

# Reload config
bind r source-file ~/.config/tmux/tmux.conf \; display "Config reloaded!"

# Vi copy mode bindings
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# longer display time for messages
set -g display-time 3000

