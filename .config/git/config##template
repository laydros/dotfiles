[user]
    name = Jason Hamilton
    email = git@laydros.net

[includeIf "gitdir:~/src/f500/"]
    path = ~/.config/git/config-f500

[core]
    excludesfile = $HOME/.config/git/gitignore
    editor = vim
    pager = delta
[status]
    relativePaths = false
[push]
    default = simple
[pull]
    rebase = false
[http]
    postBuffer = 100000000
[alias]
    co = checkout
    st = status -s -uno
    ix = diff --cached
    tree = log --oneline --decorate --graph
    news = log -p @{1}..
    lg = log --date=short --pretty='%cd %h%d %s'
    d  = diff
    dc = diff --cached
    lc = log ORIG_HEAD.. --stat --no-merges
    gl = log --oneline --decorate --stat --graph
    st = status -sb
    # show verbose output
    tags = tags -l
    branches = branches -a
    hist = log --graph --pretty=format:'%Cred%h%Creset %s%C(yellow)%d%Creset %Cgreen(%cr)%Creset [%an]' --abbrev-commit --date=relative
[interactive]
    diffFilter = delta --color-only
[color]
    ui = false
    interactive = auto
    diff = auto
    status = auto
    branch = auto
[color "interactive"]
    prompt = bold normal
    help = black

[diff]
{% if yadm.os == "Darwin" %}
    tool = kaleidoscope
{% endif %}
{% if yadm.os == "Linux" %}
    tool = meld
{% endif %}

{% if yadm.os == "Darwin" %}
[difftool "kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path "$MERGED" -- "$LOCAL" "$REMOTE"
[mergetool "kaleidoscope"]
    cmd = ksdiff --merge --output "$MERGED" --base "$BASE" -- "$LOCAL" --snapshot "$REMOTE" --snapshot
    trustExitCode = true
{% endif %}
{% if yadm.os == "Linux" %}
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
{% endif %}

[delta]
    navigate = true # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
[difftool]
	prompt = false
[init]
	defaultBranch = main
[safe]
	directory = /home/m3db/it/doc/hosts
	
	
[difftool "kaleidoscope"]
	cmd = ksdiff --wait --label \"$LOCAL\" \"$LOCAL\" --label \"$REMOTE\" \"$REMOTE\"
